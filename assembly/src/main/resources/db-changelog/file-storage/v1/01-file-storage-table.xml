<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="ulvusuleymanovv@gmail.com" id="01-create-file-table">
        <createTable tableName="eda_file">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="path" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="file_type" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="file_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="size" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="is_used" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="date_modified" type="timestamp" defaultValueDate="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="date_created" type="timestamp" defaultValueDate="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>